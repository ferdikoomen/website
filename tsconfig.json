{
	"compileOnSave": false,

	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"types": ["node"],
		"typeRoots": ["node_modules/@types"],
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strict": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "deploy"
	},

	"include": [
		"src/static/ts/**/*.ts"
	],

	"exclude": [
		"node_modules"
	]
}
