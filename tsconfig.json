{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2020",
        "module": "es2020",
        "moduleResolution": "node",
        "lib": ["es2020", "dom"],
        "types": ["node"],
        "declaration": false,
        "declarationMap": false,
        "sourceMap": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true
    },

    "include": [
        "./src/static/ts/**/*.ts"
    ],

    "exclude": [
        "node_modules"
    ]
}
