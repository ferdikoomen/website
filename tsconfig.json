{
	"compileOnSave": false,

	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"moduleResolution": "node",
		"lib": ["es6", "dom"],
		"types": ["node"],
		"declaration": false,
		"declarationMap": false,
		"sourceMap": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"strict": true,
		"strictNullChecks": true,
		"outDir": "./deploy"
	},

	"include": [
		"./src/static/ts/**/*.ts"
	],

	"exclude": [
		"node_modules"
	]
}
